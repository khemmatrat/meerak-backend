# Example environment variables for Training Center
REACT_APP_YOUTUBE_API_KEY=YOUR_YOUTUBE_API_KEY
REACT_APP_API_BASE_URL=http://localhost:4000
# Toggle mock/local storage usage
REACT_APP_USE_MOCK=true
# Certificate System
REACT_APP_FIREBASE_STORAGE_BUCKET=your-firebase-bucket.appspot.com
REACT_APP_CERTIFICATE_ENABLE_PDF=true
REACT_APP_CERTIFICATE_STORAGE=localStorage

# Optional: Cloudinary for cert storage
REACT_APP_CLOUDINARY_CLOUD_NAME=your_cloud_name
REACT_APP_CLOUDINARY_UPLOAD_PRESET=your_upload_preset

cat > .env.example << 'EOF'
# Server
NODE_ENV=development
PORT=3001
JWT_SECRET=your-super-secret-jwt-key-change-this

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=yourdb
DB_USER=youruser
DB_PASSWORD=yourpassword
DATABASE_URL=postgresql://youruser:yourpassword@localhost:5432/yourdb

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# Storage (Backblaze B2 หรือ AWS S3)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-west-002
AWS_BUCKET_NAME=your-bucket
B2_ENDPOINT=https://s3.us-west-002.backblazeb2.com

# External Services
SMS_API_KEY=your-sms-api-key
EMAIL_API_KEY=your-email-api-key

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
EOF