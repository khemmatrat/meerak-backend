
{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "./lib",
    "rootDir": "./src",
    "sourceMap": false,
    "strict": true,
    "target": "es2020",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": []  // ไม่อ่าน types จาก node_modules โดยอัตโนมัติ
  },
  "include": ["src"],
  "exclude": ["node_modules", "../node_modules"]  // ไม่รวม parent node_modules
}
